{% extends 'base.html.twig' %}

{% block title %}Page des Produits {% endblock %}

{% block body %}
    <h1>Page des Produits</h1>

    <table class="table  ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Picture</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
       
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td><img src ="{{ product.picture }}" width ="300" height ="300" alt= ""/></td>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}"><img src="{{ asset('images/loupe.png') }}" alt="" class="me-2 " style="width:20px"></a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}"><img src="{{ asset('images/update.png') }}" alt="" class="me-2" style="width:20px"></a>
                    <a href="{{ path('app_product_delete', {'id': product.id}) }}"><img src="{{ asset('images/poubelle.png') }}" alt="" class="me-2" style="width:20px"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   <a href="{{ path('app_product_new') }}" class="btn btn-lg btn-primary ">Cr√©er un nouveau produit</a>
   
    
{% endblock %}
