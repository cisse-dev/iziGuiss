{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
	 <section class="row">
        {% for value in products %}
            <div class="col-md-3 col-sm-6 col-xs-12 mt-4">
                <div class="border border-dark rounded p-3 clearfix">
                    <img src="{{ value.picture }}" alt="picture product" class="img-fluid">
                    <p>{{ value.description }}</p>
                    <p>{{ value.price }} £</p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('post_cart', {'id': value.id }) }}" class="btn btn-primary me-md-2 mb-2 mb-md-0">
                            <i class="bi bi-cart-plus"></i> Ajouter
                        </a>
                        <a href="{{ path('details', {'id': value.id }) }}" class="btn btn-secondary">
                            <i class="bi bi-cart-plus"></i> Détails
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}
